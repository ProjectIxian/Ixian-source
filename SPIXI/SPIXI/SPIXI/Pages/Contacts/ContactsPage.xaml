<?xml version="1.0" encoding="utf-8" ?>
<d:SpixiContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="clr-namespace:SPIXI;assembly=SPIXI"
             x:Class="SPIXI.ContactsPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="lst" IsPullToRefreshEnabled="True" Refreshing="lstRefreshing" ItemTapped="lstItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <StackLayout Orientation="Vertical">
                                    <Label Text="{Binding nickname}"></Label>
                                    <Label Text="{Binding wallet_address}" TextColor="Gray"></Label>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <Label Text="Showing all active IXIAN clients"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</d:SpixiContentPage>